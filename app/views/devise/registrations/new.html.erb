<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == '2' %>
    <h1>Pro Account</h1>
    <p>Pro Account gives you access to unlimited books and epublishing ability</p>
    <% else %>
    <h1>Basic Account</h1>
    <p>Basic account gives you ten free books a month</p>
    <% end %>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <h2>Sign up</h2>
      <% if params[:plan] == '2' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
